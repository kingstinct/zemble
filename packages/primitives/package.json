{
  "name": "@zemble/primitives",
  "version": "1.0.1",
  "description": "Zemble React Native Primitives",
  "author": "Robert Herber",
  "license": "MIT",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "(rm index.d.ts || true) && (rm plugin.d.ts || true) && zshy --project ./tsconfig.build.json"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "peerDependencies": {
    "@types/react": "^18.3.23",
    "react": "^18.3.1",
    "react-native": "~0.80.1",
    "react-native-safe-area-context": "^5.5.1"
  },
  "dependencies": {
    "expo-system-ui": "^2.9.4",
    "ts-pattern": "^5.7.1"
  },
  "zshy": {
    "exports": {
      ".": "./index.ts",
      "./src/*": "./src/**/*"
    }
  },
  "exclude": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.cts",
    "**/*.mts",
    "node_modules"
  ],
  "files": [
    "*"
  ],
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.mjs",
      "require": "./index.js"
    },
    "./src/*": {
      "types": "./src/*",
      "import": "./src/*",
      "require": "./src/*"
    }
  },
  "main": "./index.js",
  "module": "./index.mjs",
  "types": "./index.d.ts"
}
