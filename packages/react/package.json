{
  "name": "@zemble/react",
  "version": "1.0.18",
  "description": "Kingstinct Hooks Utility Library",
  "author": "Robert Herber",
  "license": "MIT",
  "scripts": {
    "start": "cp index.expo.js index.js && expo start",
    "android": "cp index.expo.js index.js && expo run:android",
    "ios": "cp index.expo.js index.js && expo run:ios",
    "web": "cp index.expo.js index.js && expo start --web",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "build": "(rm index.d.ts || true) && (rm plugin.d.ts || true) && zshy --project ./tsconfig.build.json"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.18.9",
    "@babel/preset-env": "^7.28.0",
    "@expo/vector-icons": "^14.1.0",
    "@expo/webpack-config": "^19.0.1",
    "@react-navigation/native": "^6.1.18",
    "@react-navigation/native-stack": "6",
    "@storybook/addon-actions": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/builder-webpack4": "^6.5.16",
    "@storybook/manager-webpack4": "^6.5.16",
    "@storybook/react": "^8.6.14",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/react": "^18.3.23",
    "@types/react-native": "~0.73.0",
    "babel-loader": "^9.2.1",
    "babel-polyfill": "^6.26.0",
    "expo": "^49.0.23",
    "expo-application": "~5.3.0",
    "expo-device": "~5.4.0",
    "expo-haptics": "^12.8.1",
    "expo-status-bar": "^1.12.1",
    "expo-system-ui": "^2.9.4",
    "metro-config": "^0.82.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-native": "~0.80.1",
    "react-native-gesture-handler": "^2.27.1",
    "react-native-reanimated": "~3.18.0",
    "react-native-safe-area-context": "^5.5.1",
    "react-native-screens": "^4.11.1",
    "react-native-web": "^0.20.0",
    "react-test-renderer": "^18.3.1",
    "webpack": "^5.99.9"
  },
  "peerDependencies": {
    "@types/react": "^18.3.23",
    "react": "^18.3.1",
    "react-native-reanimated": "~3.18.0"
  },
  "dependencies": {
    "@zemble/primitives": "workspace:*"
  },
  "zshy": {
    "exports": {
      ".": "./index.ts",
      "./components/*": "./components/**/*",
      "./contexts/*": "./contexts/**/*",
      "./hooks/*": "./hooks/**/*",
      "./utils/*": "./utils/**/*"
    }
  },
  "exclude": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.cts",
    "**/*.mts",
    "node_modules"
  ],
  "files": [
    "*"
  ],
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.mjs",
      "require": "./index.js"
    },
    "./components/*": {
      "types": "./components/*",
      "import": "./components/*",
      "require": "./components/*"
    },
    "./contexts/*": {
      "types": "./contexts/*",
      "import": "./contexts/*",
      "require": "./contexts/*"
    },
    "./hooks/*": {
      "types": "./hooks/*",
      "import": "./hooks/*",
      "require": "./hooks/*"
    },
    "./utils/*": {
      "types": "./utils/*",
      "import": "./utils/*",
      "require": "./utils/*"
    }
  },
  "main": "./index.js",
  "module": "./index.mjs",
  "types": "./index.d.ts"
}
