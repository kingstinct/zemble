{
  "name": "@zemble/mongodb",
  "version": "0.0.44",
  "description": "Handles connections to MongoDB",
  "keywords": [
    "zemble",
    "zemble-plugin",
    "@zemble"
  ],
  "dependencies": {
    "@zemble/auth": "workspace:*",
    "@zemble/bun": "workspace:*",
    "@zemble/core": "workspace:*",
    "@zemble/routes": "workspace:*",
    "@zemble/utils": "workspace:*",
    "mongodb": "^6.17.0",
    "mongodb-memory-server": "10",
    "mongodb-memory-server-core": "^10.1.4",
    "type-fest": "^4.41.0"
  },
  "scripts": {
    "test": "bun test",
    "dev": "zemble-dev plugin.ts",
    "typecheck": "tsc --noEmit",
    "build": "zshy"
  },
  "devDependencies": {
    "@zemble/migrations": "workspace:*"
  },
  "peerDependencies": {
    "@zemble/migrations": "0.0.40"
  },
  "module": "plugin.ts",
  "main": "plugin.ts",
  "zshy": {
    "exports": {
      "./plugin": "./plugin.ts",
      "./routes/*": "./routes/*.ts"
    }
  },
  "exclude": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.cts",
    "**/*.mts",
    "node_modules"
  ]
}
