{
  "name": "@zemble/react-portal",
  "version": "1.0.1",
  "description": "Portal components and hooks",
  "author": "Robert Herber",
  "license": "MIT",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "(rm index.d.ts || true) && (rm plugin.d.ts || true) && zshy --project ./tsconfig.build.json"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "main": "./index.js",
  "types": "./index.d.ts",
  "peerDependencies": {
    "@types/react": "^18.3.23",
    "react": "^18.3.1",
    "react-native": "~0.80.1",
    "react-native-reanimated": "~3.18.0"
  },
  "dependencies": {
    "@gorhom/portal": "^1.0.14",
    "@zemble/utils": "workspace:*",
    "react-native-safe-area-context": "^5.5.1",
    "react-native-screens": "^4.11.1",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@types/react": "^18.3.23",
    "@types/react-native": "~0.73.0"
  },
  "zshy": {
    "exports": {
      ".": "./index.ts",
      "./components/*": "./components/**/*",
      "./hooks/*": "./hooks/**/*"
    }
  },
  "exclude": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.cts",
    "**/*.mts",
    "node_modules"
  ],
  "files": [
    "*"
  ],
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.mjs",
      "require": "./index.js"
    },
    "./components/*": {
      "types": "./components/*",
      "import": "./components/*",
      "require": "./components/*"
    },
    "./hooks/*": {
      "types": "./hooks/*",
      "import": "./hooks/*",
      "require": "./hooks/*"
    }
  },
  "module": "./index.mjs"
}
