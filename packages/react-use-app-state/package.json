{
  "name": "@zemble/react-use-app-state",
  "version": "1.0.1",
  "description": "React hook for monitoring app state (active, background, inactive)",
  "author": "Robert Herber",
  "license": "MIT",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "zshy"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "main": "index.ts",
  "types": "index.ts",
  "peerDependencies": {
    "@types/react": "^18.3.23",
    "react": "^18.3.1",
    "react-native": "~0.80.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.23",
    "@types/react-native": "~0.73.0"
  },
  "zshy": {
    "exports": {
      "./index": "./index.ts"
    }
  },
  "exclude": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.cts",
    "**/*.mts",
    "node_modules"
  ]
}
