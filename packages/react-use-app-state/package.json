{
  "name": "@zemble/react-use-app-state",
  "version": "1.0.1",
  "description": "React hook for monitoring app state (active, background, inactive)",
  "author": "Robert Herber",
  "license": "MIT",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "(rm index.d.ts || true) && (rm plugin.d.ts || true) && zshy --project ./tsconfig.build.json"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "types": "index.ts",
  "peerDependencies": {
    "@types/react": "^18.3.23",
    "react": "^18.3.1",
    "react-native": "~0.80.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.23",
    "@types/react-native": "~0.73.0"
  },
  "zshy": {
    "exports": {
      "./*": "./**/*"
    }
  },
  "exclude": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.cts",
    "**/*.mts",
    "node_modules"
  ],
  "files": [
    "*"
  ],
  "exports": {
    "./*": {
      "types": "./*",
      "import": "./*",
      "require": "./*"
    }
  }
}
