{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        "**/tsconfig.json",
        "**/package.json"
      ]
    },
    "test": {
      "dependsOn": ["codegen"],
      "outputLogs": "errors-only",
      "inputs": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        "**/tsconfig.json",
        "**/package.json"
      ]
    },
    "typecheck": {
      "dependsOn": ["codegen"],
      "outputLogs": "full",
      "inputs": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        "**/tsconfig.json",
        "**/package.json"
      ]
    },
    "codegen": {
      "dependsOn": ["^codegen"],
      "outputLogs": "errors-only",
      "inputs": ["**/*.graphql", "**/codegen.ts", "**/package.json"]
    }
  }
}
