{
  "runOnSave.commands": [
    {
      "globMatch": "**/*.{graphql,test.ts}",
      "command": "bun run codegen",
      "runIn": "terminal"
    },
    {
      "globMatch": "packages/cms/types.ts",
      "command": "bun run generate-cms-json-schema",
      "runIn": "terminal"
    }
  ],
  "biome.enabled": true,
  "biome.lsp.bin": "node_modules/@biomejs/biome/bin/biome",
  "typescript.tsdk": "node_modules/typescript/lib",
  "prettier.enable": false,
  "biome.configurationPath": "../biome.json",
  "biome.lsp.trace.server": "messages",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "editor.defaultFormatter": "biomejs.biome",
  "editor.codeActionsOnSave": {
    "source.organizeImports.biome": "explicit",
    "source.fixAll.biome": "explicit"
  },
  "editor.formatOnSave": true,
  "cSpell.words": [
    "bullboard",
    "bullmq",
    "bunx",
    "codegen",
    "composability",
    "dataloaders",
    "fastify",
    "fileprovider",
    "JWKS",
    "kingstinct",
    "liveactivity",
    "logtape",
    "netinfo",
    "Onesignal",
    "papr",
    "prepush",
    "Proxying",
    "Pubber",
    "pucelle",
    "pushkit",
    "pushtotalk",
    "SENDGRID",
    "snackbars",
    "Subschema",
    "supabase",
    "syncpack",
    "Timeoutify",
    "tldr",
    "urql",
    "webkitvisibilitychange",
    "zemble",
    "zshy"
  ]
}
